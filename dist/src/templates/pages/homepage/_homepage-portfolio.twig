<section class="homepage-portfolio" data-section="portfolio">
    <div class="homepage-portfolio__inner container">
        <div class="homepage-portfolio__slider">
            {% for item in portfolio.list %}
                <div class="homepage-portfolio__item {% if loop.first %} homepage-portfolio__item--active {% endif %}">
                    <div class="homepage-portfolio__item-inner" style="background-image: url({{ item.img }});">
                        <div class="homepage-portfolio__text">
                            <a href="#" class="homepage-portfolio__title animation-item">{{ item.title }}</a>
                            <p class="homepage-portfolio__description animation-item">{{ item.description }}</p>
                        </div>
                    </div>
                    <div class="homepage-portfolio__circle"></div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
