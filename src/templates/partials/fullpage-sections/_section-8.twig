<div class="fp-swiper-slide">
  <div class="fp-contacts">
    <div class="fp-contacts__background"></div>
    <div class="fp-contacts__inner" data-swiper-parallax-y="-400">
      <div class="fp-contacts__info-block">
        <h1>Our <b>Contacts</b></h1>
        <h2>Bussmann Advisory AG</h2>
        <p>Alpenstrasse 9</p>
        <p>6300 Zug / Switzerland</p>
        <p><a href="mailto:info@bussmannadvisory.com">info@bussmannadvisory.com</a></p>
        <h3>Connect With Us</h3>
        <ul class="fp-contacts__social">
          <li><a class="button-social" href="#">{% include 'svg/_social-linkedin.twig' %}</a></li>
          <li><a class="button-social" href="#">{% include 'svg/_social-twitter.twig' %}</a></li>
          <li><a class="button-social" href="#">{% include 'svg/_social-youtoube.twig' %}</a></li>
        </ul>
      </div>
      <div class="fp-contacts__form-block">
        <h2>Send a Message</h2>
        <form>
          <input type="text" name="name" placeholder="Name">
          <input type="email" name="email" placeholder="Email">
          <input type="text" name="subject-title" placeholder="Subject">
          <textarea name="subject-text" placeholder="Subject"></textarea>
          <button class="button" type="submit">Send</button>
        </form>
      </div>
    </div>
    <div class="fp-contacts__page-footer">
      {% include "../../components/_footer.twig" %}
    </div>
  </div>
</div>
