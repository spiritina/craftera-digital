<section class="slide-flex-container" data-section="prices">
    <div class="homepage-prices container">
        <div class="homepage-prices__description">
            <h2 class="homepage-prices__title primary-title animation-item">{{ prices.title }}</h2>
            <p class="homepage-prices__text animation-item">{{ prices.description }}</p>
            <ul class="homepage-prices__list homepage-prices__list--mobile">
                {% for item in prices.list %}
                    <li class="homepage-prices__item animation-price__item">
                        <div class="homepage-prices__label">
                            <div class="homepage-prices__label-inner">
                        <span class="homepage-prices__semicolon">
                            {{ item.label }}
                            <span class="homepage-prices__dots"> . . . . . . . . . . . . . . . . . . . . </span>
                        </span>
                            </div>
                        </div>
                        <span class="homepage-prices__value">{{ item.price }}</span>
                    </li>
                {% endfor %}
            </ul>
            <div class="btn-perspective">
                <div class="btn-perspective__inner">
                    <button class="btn btn--dark">{{ prices.btnText }}</button>
                </div>
            </div>
            <div class="homepage-prices__dash"></div>
        </div>
        <ul class="homepage-prices__list homepage-prices__list--desktop">
            {% for item in prices.list %}
            <li class="homepage-prices__item animation-price__item">
                <div class="homepage-prices__label">
                    <div class="homepage-prices__label-inner">
                        <span class="homepage-prices__semicolon">
                            {{ item.label }}
                            <span class="homepage-prices__dots"> . . . . . . . . . . . . . . . . . . . . </span>
                        </span>
                    </div>
                </div>
                <span class="homepage-prices__value">{{ item.price }}</span>
            </li>
            {% endfor %}
        </ul>
    </div>
</section>
